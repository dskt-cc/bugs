{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["bugs", "metadata"],
  "properties": {
    "bugs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "description",
          "severity",
          "reportedBy",
          "dateReported",
          "affected"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^BUG-\\d{3}$"
          },
          "title": {
            "type": "string",
            "minLength": 5,
            "maxLength": 100
          },
          "description": {
            "type": "string",
            "minLength": 20
          },
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "reportedBy": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-]+$"
          },
          "dateReported": {
            "type": "string",
            "pattern": "^\\d{4}-(?:0[1-9]|1[0-2])-(?:0[1-9]|[12]\\d|3[01])$"
          },
          "dateFixed": {
            "type": "string",
            "pattern": "^\\d{4}-(?:0[1-9]|1[0-2])-(?:0[1-9]|[12]\\d|3[01])$"
          },
          "status": {
            "type": "string",
            "enum": ["investigating", "confirmed", "in-progress", "pending-release"]
          },
          "assignedTo": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[a-zA-Z0-9-]+$"
            },
            "uniqueItems": true
          },
          "affected": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "Website",
                "ModLoader",
                "UI",
                "API",
                "Documentation",
                "ModFilters",
                "Performance",
                "Security",
                "Other"
              ]
            },
            "minItems": 1,
            "uniqueItems": true
          },
          "type": {
            "type": "string",
            "enum": ["bug", "security", "enhancement"]
          },
          "fixedBy": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[a-zA-Z0-9-]+$"
            },
            "uniqueItems": true
          },
          "fixedIn": {
            "type": "string"
          },
          "commits": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[a-f0-9]+$"
            },
            "uniqueItems": true
          },
          "pullRequest": {
            "type": "string",
            "pattern": "^\\d+$"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["lastUpdated", "repository"],
      "properties": {
        "lastUpdated": {
          "type": "string",
          "pattern": "^\\d{4}-(?:0[1-9]|1[0-2])-(?:0[1-9]|[12]\\d|3[01])$"
        },
        "repository": {
          "type": "string",
          "pattern": "^dskt-cc/[a-zA-Z0-9-\\.]+$"
        },
        "totalActiveBugs": {
          "type": "number",
          "minimum": 0
        },
        "totalFixed": {
          "type": "number",
          "minimum": 0
        }
      }
    }
  }
}
